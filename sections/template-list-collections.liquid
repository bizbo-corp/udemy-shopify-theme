<div class="page-width">
  <h1 class="text-center text-4xl font-bold my-8">{{ page_title }}</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {% for collection in collections %}
      <div class="collection-card">
        <a href="{{ collection.url }}">
          {% if collection.image %}
            <img 
              src="{{ collection.image | img_url: 'medium' }}"
              alt="{{ collection.title | escape }}"
              class="w-full h-64 object-cover"
            >
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'w-full h-64' }}
          {% endif %}
          
          <h2 class="text-xl font-medium mt-4">{{ collection.title }}</h2>
          {% if collection.description != blank %}
            <p class="text-gray-600">{{ collection.description | strip_html | truncate: 120 }}</p>
          {% endif %}
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Template List Collections",
  "settings": []
}
{% endschema %} 